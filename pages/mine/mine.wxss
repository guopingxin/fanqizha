/* pages/mine/mine.wxss */

.container{
  width: 100%;
  position: relative;
}

.bg-absolute{
  position: absolute;
  height: 130rpx;
  background: #366ff3;
  z-index: -1;
  top: 0;
  width: 100%;
}
.personal-box{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.head-img{
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
  border:1rpx solid #366ff3;
  border-radius: 50%;
}

.head-img image{
  width: 110rpx;
  height: 110rpx;
}

.head-img text{
  position: absolute;
  bottom: 0;
  font-size: 20rpx;
  color: white;
  width: 105rpx;
  height: 30%;
  text-align: center;
  background: url(https://612d-a-data-1a3ebf-1257782233.tcb.qcloud.la/fanqizhalianmeng/editbg.png?sign=46273ed1cd10db33297ea29f398350e8&t=1568685063) no-repeat left top;
  /* border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx; */
  background-size: 100% 100%;
}

.nickname{
  color: #366ff3;
  margin: 14rpx 0;
}

.company{
  color: rgb(119, 121, 122);
  font-size: 24rpx;
}

.zhanghu{
  display: flex;
  align-items: center;
  height: 100rpx;
  width: 94%;
  margin: 0 3%;
  border-bottom: 1rpx solid rgb(241, 241, 241);
  position: relative;
}

.zhanghu image{
  width: 60rpx;
  height: 60rpx;
}

.zhanghu text{
  margin-left: 14rpx;
}

.arrows{
  width: 18rpx;
  height: 18rpx;
  border-top: 3rpx solid #b9b9b9;
  border-right: 3rpx solid #b9b9b9;
  transform: rotate(45deg);
  position: absolute;
  right: 0;
  top: 40rpx;
}

.whole{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(73, 73, 73, 0.5);
  width: 100%;
  height: 100%;
}

.backlogin-box{
  background: white;
  width: 100%;
  height: 300rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: column;
}

.backlogin{
  height: 100rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid rgb(241, 241, 241);
  color: #b9b9b9;
  font-size: 36rpx;
  width: 100%;
  justify-content: center;
}

.border{
  border-bottom: 6rpx solid #e8e8e8 !important;
  color: #202020 !important;
}

.border1{
  border-bottom: 0 !important;
  color: #202020 !important;
}

