/* pages/mine/member/member.wxss */
.map{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
}

.search-box{
  width: 82%;
  height: 80rpx;
  border-radius: 50rpx;
  background: white;
  box-shadow: 0 0 2rpx 2rpx rgba(241, 241, 241, 0.5);
  position: relative;
  top: 24rpx;
  left: 5%;
  z-index: 10;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 4%;
  color: #b5b5b5;

}

.search-img{
  width: 40rpx;
  height: 40rpx;
}

.scale{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  font-size: 60rpx;
  width: 80rpx;
  height: 120rpx;
  background: white;
  border-radius: 5rpx;
  position: absolute;
  right: 24rpx;
  top: 500rpx;
  padding: 0rpx 0 20rpx;
  color: #b5b5b5;
}

.scale cover-view{
  display: flex;
  align-items: flex-end;
}

.markerinfor{
  display: flex;
  flex-direction: column;
  position: fixed;
  bottom: 0;
  width: 90%;
  height: 110rpx;
  background: white;
  padding: 18rpx 5%;
}

.markerinfor cover-image{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 30rpx;
  top: 20rpx;
}

.address{
  color: #b5b5b5;
  font-size: 22rpx;
  margin-top: 14rpx;
}

.whole{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(73, 73, 73, 0.5);
  width: 100%;
  height: 100%;
  z-index: 20;
}

.backlogin-box{
  background: white;
  width: 100%;
  height: 300rpx;
  position: fixed;
  bottom: 0;
}

.backlogin{
  border-top: 6rpx solid rgb(241, 241, 241);
  color: #b9b9b9;
  font-size: 36rpx;
  width: 100%;
  text-align: center;
  padding: 30rpx 0;
}

.border{
  border-bottom: 6rpx solid #e8e8e8 !important;
  color: #202020 !important;
}

.border1{
  border-bottom: 0 !important;
  color: #202020 !important;
}
