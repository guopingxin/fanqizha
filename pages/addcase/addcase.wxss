/* pages/addcase/addcase.wxss */
.container{
  position: relative;
}

.bg-absolute{
  position: absolute;
  top: -24rpx;
  width: 100%;
  height: 224rpx;
  background: #366ff3;
  z-index: -2;
}

.case-information{
  width: 90%;
  margin: 24rpx 5% 0 5%;
  border: 1rpx solid rgb(241, 241, 241);
  border-radius: 20rpx;
  box-shadow: 0 0 4rpx 2rpx rgba(241, 241, 241, 0.50); 
  padding: 26rpx 16rpx;
  background: white;
  font-size: 28rpx;
}

.case-tip{
  display: flex;
  align-items: center;
  margin-bottom: 14rpx;
}

.line{
  width: 6rpx;
  height: 22rpx;
  background: #366ff3;
  margin-right: 10rpx;
}

.case-text{
  font-family: PingFangSC-Semibold, sans-serif;
  font-size: 34rpx;
}

.case-no{
  display: flex;
  justify-content: space-between;
  padding: 14rpx 0;
  color: #505050;
  border-bottom: 1rpx solid #f6f6f6;
}

.case-no input{
  text-align: right;
  width: 70%;
}

.color{
  color: #b5b5b5;
}

.case-describe{
  display: flex;
  flex-direction: column;
  color: #505050;
  padding: 14rpx 0;
}

.case-describe{
  height: 160rpx;
}

.case-describe textarea{
  padding-top: 10rpx;
  width: 100%;
}

.addsubmit button{
  width: 80%;
  height: 70rpx;
  color: white;
  background: #2d69f3;
  margin: 0 10%;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
  line-height: 2;
  font-size: 32rpx;
}