} */

.danjuimg{
  display: flex;
  flex-wrap:wrap;
  margin: 0 46rpx;
  justify-content: space-between;
}

.caseprograss{
  position: fixed;
  bottom: 0;
  height: 80rpx;
  width: 100%;
  background: #366ff3;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
  letter-spacing: 2rpx;
  font-size: 26rpx;
}





