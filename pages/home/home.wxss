/* pages/home/home.wxss */
.container{
  /* position: relative; */
}

.bg-absolute{
  width: 100%;
  height: 58rpx;
  background: #366ff3;
  position: absolute;
  z-index: -2;
  top: 0;
}

.search-box{
  width: 94%;
  height: 80rpx;
  margin: 2% 3%;
  border-radius: 20rpx;
  box-shadow: 0 0 4rpx 2rpx rgba(241, 241, 241, 0.50); 
  border: 1rpx solid rgb(241, 241, 241);
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
  background: white;
  justify-content: space-between;
  padding: 0 30rpx;
}

.search-box image:first-child{
  width: 40rpx;
  height: 40rpx;
}

.case-statistics{
  width: 94%;
  margin: 2% 3%;
  box-shadow: 0 0 4rpx 2rpx rgba(241, 241, 241, 0.50); 
  border: 1rpx solid rgb(241, 241, 241);
  border-radius: 20rpx;
}

.case-title{
  margin: 20rpx 0 0 30rpx;
}

.case-num{
  display: flex;
  align-items: center;
  justify-content: space-around;
  text-align: center;
  margin: 30rpx 0;
}

.font{
  font-size: 50rpx;
  font-family: PingFangSC-Semibold, sans-serif;
}

.case-list{
  display: flex;
  width: 94%;
  margin: 2% 3%;
  align-items: center;
  position: relative;
}

.line{
  width: 4rpx;
  height: 20rpx;
  background: #366ff3;
  margin-right: 14rpx;
}

.more{
  position: absolute;
  right: 3%;
  display: flex;
  align-items: center;
  color: #b9b9b9;
  font-size: 24rpx;
}

.arrows{
  width: 16rpx;
  height: 16rpx;
  border-top: 3rpx solid #b9b9b9;
  border-right: 3rpx solid #b9b9b9;
  transform: rotate(45deg);
}

.add{
  position: fixed;
  right: 5%;
  top: 900rpx;
}

.add image{
  width: 80rpx;
  height: 80rpx;
}

.nodata{
  width: 94%;
  margin: 2% 3%;
  display: flex;
  height: 100rpx;
  align-items: center;
  justify-content: center;
  padding: 20rpx 20rpx;
  color: #b9b9b9;
}