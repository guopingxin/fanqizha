/* pages/login/login.wxss */
.container{
  width: 100%;
  height: 100%;
  position: relative;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
}

.login-top{
  width: 100%;
  height: 360rpx;
  display: flex;
  justify-content: center;
}

.login-top text{
  position: absolute;
  top: 30rpx;
  left: 60rpx;
  color: white;
  font-size: 44rpx;
}

.login-bg{
  width: 100%;
}

.head-portrait{
  position: absolute;
  width: 180rpx;
  height: 180rpx;
  top: 220rpx;
}

.user-pwd-form{
  width: 80%;
  margin: 100rpx auto;
  height: 500rpx;
}

.user{
  box-shadow: 0 0 4rpx 2rpx rgba(241, 241, 241, 0.50);
  border-radius: 50rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  background: rgb(241, 241, 241);
  justify-content:space-around;
}

.user-logo image{
  width: 60rpx;
  height: 60rpx;
}

.user input{
  width: 75%;
}

.pwd{
  margin-top: 40rpx;
}

.forget-style{
  display: flex;
  flex-direction: row-reverse;
  margin-top: 40rpx;
  align-items: center;
  font-size: 26rpx;
}

.forget-style text{
  color: #b9b9b9;
}

.arrows{
  width: 18rpx;
  height: 18rpx;
  border-top: 3rpx solid #b9b9b9;
  border-right: 3rpx solid #b9b9b9;
  transform: rotate(45deg);
}

.login-register{
  display: flex;
  margin-top: 40rpx;
  justify-content: space-between;
  font-size: 36rpx;
}

.register{
  width: 270rpx;
  height: 90rpx;
  border-radius: 50rpx;
  border: 1rpx solid #2d69f3;
  color: #2d69f3;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-register button{
  width: 270rpx;
  height: 90rpx;
  border-radius: 50rpx;
  color: white;
  background: #2d69f3;
  margin: 0
}
