/* pages/addprogress/addprogress.wxss */
.container{
  width: 90%;
  margin: 3% 5%;
}

.describe{
  margin: 20rpx 0;
}

.describe view{
  font-family: PingFangSC-Semibold, sans-serif;
  font-size: 36rpx;
  margin-bottom: 1%;
}

.describe textarea{
  height: 200rpx;
  width: 100%;
}

.paizhao{
  margin:20rpx 0 120rpx 0;
}

.camera{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 140rpx;
  height: 140rpx;
  border: 1rpx solid rgb(241, 241, 241);
  border-radius: 5rpx;
  margin-top: 40rpx;
}

.camera text{
  font-size: 22rpx;
  margin-top: 3rpx;
  color:#ccc;
}

.camera image{
  width: 60rpx;
  height: 44rpx;
}

.voice-whole{
  display: flex;
  flex-direction: column;
  padding-bottom: 300rpx;
}

.voice{
  display: flex;
  justify-content: space-between;
  font-size: 36rpx;
  font-family: PingFangSC-Semibold, sans-serif;
  align-items: center;
  padding-bottom: 40rpx;
}

.voice image{
  width: 80rpx;
  height: 40rpx;
}

.recording-whole{
  display: flex;
  justify-content: space-between;
  align-items: center;
  
}

.recording{
  display: flex;
  justify-content: center;
  width: 80%;
  height: 70rpx;
  align-items: center;
  border: 1rpx solid rgb(241, 241, 241);
  border-radius: 50rpx;
  
}



.recording image{
  width: 36rpx;
  height: 50rpx;
  margin-right: 20rpx;
}

.shangchuan{
  width: 70rpx;
  height: 70rpx;
}

.submit{
  position: fixed;
  bottom: 0;
  background: #2d69f3;
  border-radius: 0;
  color: white;
  width: 100%;
}

.imagecell{
  display: flex;
  flex-wrap:wrap;
}

.imageitem{
  position: relative;
  width: 33.3%;
}

.pic{
  width: 200rpx;
  height: 200rpx;
}

.del{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: -16rpx;
  right: 2rpx;
  z-index: 1;
}